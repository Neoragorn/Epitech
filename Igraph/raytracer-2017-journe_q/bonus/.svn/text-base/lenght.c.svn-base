#include	<math.h>
#include	"../point_h/fonction.h"

void		check_length(t_calc *calc, int k)
{
  if (calc->x == k)
    {
      my_putstr("\rLe calcul est a ");
      my_putnbr((k / (WIN_X / 100)));
      my_putchar('%');
    }
}

